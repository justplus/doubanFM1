<UserControl x:Class="doubanFM.DefChannelAlbum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="120" Height="120">
    <Grid>
        <Canvas Cursor="Hand">
            <Image Name="albumPic" HorizontalAlignment="Left" Height="120" VerticalAlignment="Top" Width="120"/>
            <Label Name="name" Content="你的歌词我的故事" HorizontalContentAlignment="Center" Canvas.Bottom="0" VerticalAlignment="Top" Width="120" Foreground="White">
                <Label.Background>
                    <SolidColorBrush Color="Green" Opacity="0.7"></SolidColorBrush>
                </Label.Background>
            </Label>
            <Image Name="favPic" Height="40" Canvas.Right="0" Width="30" Source="Images/AddFav.png" Cursor="Hand" ToolTip="添加收藏"/>
        </Canvas>
    </Grid>
</UserControl>
